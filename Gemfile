source 'https://rubygems.org'
# la version ruby vous pouvez la modifiée et mettre la version de votre choix
ruby '3.2.4'
# Gemmes nécessaires pour le projet
gem 'rspec'         # Pour les tests
gem 'nokogiri'      # Pour le scraping HTML/XML
gem 'csv'           # Pour manipuler des fichiers CSV
gem 'json'          # Pour manipuler des fichiers JSON
gem 'dotenv'        # Pour charger les variables d'environnement à partir d'un fichier .env
gem 'bundler'       # Pour gérer les dépendances
gem 'fileutils'     # facilite la manipulation de fichiers
